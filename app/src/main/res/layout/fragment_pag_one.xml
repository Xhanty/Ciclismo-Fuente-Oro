<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondodes"
    app:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".InfoIndex.Fragment_PagOne">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="242dp"
                    android:layout_height="220dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="100dp"
                    android:src="@drawable/onefra" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:fontFamily="sans-serif-thin"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="Recorre fuente de oro"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:text="Disfruta de nuestros paisajes mientras"
                    android:textColor="#000"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:text="recorres en tu bicicleta"
                    android:textColor="#000"
                    android:textSize="18dp" />


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="45dp"
                    android:src="@drawable/onedes"/>


                <LinearLayout
                    android:layout_marginTop="80dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="bottom"
                    android:gravity="bottom">

                    <Button
                        android:id="@+id/sal_des_one"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:text="Saltar"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:textAlignment="textStart"
                        android:textColor="@color/colorAccent"
                        android:textSize="15dp"
                        android:fontFamily="serif"
                        android:textAllCaps="false"/>

                    <Button
                        android:id="@+id/sig_des_one"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:textAlignment="textEnd"
                        android:background="@android:color/transparent"
                        android:text="Siguiente"
                        android:textColor="@color/colorAccent"
                        android:textSize="15dp"
                        android:fontFamily="serif"
                        android:textAllCaps="false"/>
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </ScrollView>

</FrameLayout>