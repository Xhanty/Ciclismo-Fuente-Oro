<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#fff"
    app:cardCornerRadius="12dp"
    android:layout_marginBottom="8dp"
    android:layout_margin="7dp"
    android:elevation="90dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:background="@color/colorPrimary"
        android:padding="20dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_settings" />


        <TextView
            android:id="@+id/comentario_ruta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/abhaya_libre_semibold"
            android:includeFontPadding="false"
            android:text="El lugar es muy bueno para pasar la tarde con tÃº familia, (98 caracteres con espacio)"
            android:layout_alignParentStart="true"
            android:textColor="#000"
            android:textSize="18sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_gravity="bottom|start">

        <TextView
            android:id="@+id/ciclista_comentario_ruta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/abhaya_libre_semibold"
            android:includeFontPadding="false"
            android:text="Santiago Henao"
            android:textColor="#000"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        android:layout_gravity="bottom|end">

        <TextView
            android:id="@+id/fecha_comentario_ruta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/abhaya_libre_semibold"
            android:includeFontPadding="false"
            android:text="18/06/2020"
            android:textColor="#000"
            android:textSize="15sp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>